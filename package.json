{
  "name": "ts-punycode",
  "type": "module",
  "version": "0.1.1",
  "description": "A modern TypeScript implementation of Punycode (RFC 3492) with full RFC 5891 support.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-punycode#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-punycode.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-punycode/issues"
  },
  "keywords": [
    "typescript",
    "punycode",
    "rfc3492",
    "rfc5891",
    "converter",
    "package"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["README.md", "dist"],
  "scripts": {
    "build": "bun --bun build.ts",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "prepublishOnly": "bun --bun run build",
    "test": "bun test",
    "lint": "bunx --bun pickier run . --mode lint --config pickier.config.ts",
    "lint:fix": "bunx --bun pickier run . --mode lint --fix --config pickier.config.ts",
    "format": "bunx --bun pickier run . --mode format --write --config pickier.config.ts",
    "format:check": "bunx --bun pickier run . --mode format --check --config pickier.config.ts",
    "changelog": "bunx logsmith --verbose",
    "changelog:generate": "bunx logsmith --output CHANGELOG.md",
    "release": "bun run changelog:generate && bunx bumpx prompt --recursive",
    "postinstall": "bunx git-hooks",
    "dev:docs": "bun --bun vitepress dev docs",
    "build:docs": "bun --bun vitepress build docs",
    "preview:docs": "bun --bun vitepress preview docs",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "devDependencies": {
    "@stacksjs/clarity": "^0.3.24",
    "better-dx": "^0.2.5"
  },
  "git-hooks": {
    "pre-commit": {
      "staged-lint": {
        "*.{js,ts,json,yaml,yml,md}": "bunx --bun pickier run --mode lint --fix --config pickier.config.ts"
      }
    },
    "commit-msg": "bunx gitlint --edit .git/COMMIT_EDITMSG"
  }
}
